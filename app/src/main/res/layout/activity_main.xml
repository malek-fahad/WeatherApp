<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notificationBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>
    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_notification_dot"
        app:layout_constraintStart_toStartOf="@id/notificationBtn"
        app:layout_constraintEnd_toEndOf="@id/notificationBtn"
        app:layout_constraintTop_toTopOf="@id/notificationBtn"
        app:layout_constraintBottom_toBottomOf="@id/notificationBtn"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintVertical_bias="0.2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settingBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/dashboardCV"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/dark"
        android:elevation="5dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notificationBtn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/todayDateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:elevation="5dp"
        android:fontFamily="@font/secular_one"
        android:text="Tuesday,14  May"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/dashboardCV"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/dashboardCV"
        app:layout_constraintTop_toTopOf="@id/dashboardCV" />
    <TextView
        android:id="@+id/currentCityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los Angeles"
        android:textColor="@color/white"
        android:elevation="5dp"
        android:textStyle="italic"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        app:layout_constraintStart_toStartOf="@id/todayDateTV"
        app:layout_constraintEnd_toEndOf="@id/todayDateTV"
        app:layout_constraintTop_toBottomOf="@id/todayDateTV"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/currentTemperatureTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27.0"
        android:maxLength="4"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@id/todayDateTV"
        app:layout_constraintEnd_toEndOf="@id/todayDateTV"
        app:layout_constraintTop_toBottomOf="@id/currentCityTV"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â°C"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:elevation="5dp"
        app:layout_constraintStart_toEndOf="@id/currentTemperatureTV"
        app:layout_constraintTop_toTopOf="@id/currentTemperatureTV"/>
<TextView
    android:id="@+id/currentWeatherNameTV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sunny Cloudy"
    android:textColor="@color/white"
    android:elevation="5dp"
    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
    app:layout_constraintStart_toStartOf="@id/todayDateTV"
    app:layout_constraintEnd_toEndOf="@id/todayDateTV"
    app:layout_constraintTop_toBottomOf="@id/currentTemperatureTV"
    app:layout_constraintBottom_toBottomOf="@id/dashboardCV"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintVertical_bias="1.0"
    android:layout_marginBottom="15dp"/>
    <ImageView
        android:id="@+id/weatherIconIV"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/img_ic_sun"
        android:elevation="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/currentTemperatureTV"
        app:layout_constraintEnd_toEndOf="@id/dashboardCV"
        app:layout_constraintTop_toTopOf="@id/dashboardCV"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/recycleCV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weatherIconIV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/dark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/forecastRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="@id/recycleCV"
        app:layout_constraintEnd_toEndOf="@id/recycleCV"
        app:layout_constraintTop_toTopOf="@id/recycleCV"
        app:layout_constraintBottom_toBottomOf="@id/recycleCV"
        tools:listitem="@layout/item_forecast_list"
        android:layout_margin="10dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>