<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/itemListIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_ic_cloud_moon"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemBorder"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/itemListTemperatureTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27.0°"
        android:maxLength="4"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/itemListTemC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°C"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:elevation="5dp"
        app:layout_constraintStart_toEndOf="@id/itemListTemperatureTV"
        app:layout_constraintTop_toTopOf="@id/itemListTemperatureTV"/>
    <TextView
        android:id="@+id/itemListWeekNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/itemListTemperatureTV"
        app:layout_constraintEnd_toStartOf="@id/itemListIcon"
        app:layout_constraintTop_toTopOf="@id/itemListTemperatureTV"
        app:layout_constraintBottom_toTopOf="@id/itemListDateTV"/>
    <TextView
        android:id="@+id/itemListDateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="15 May 2022"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/itemListTemC"
        app:layout_constraintEnd_toStartOf="@id/itemListIcon"
        app:layout_constraintTop_toBottomOf="@id/itemListWeekNameTV"
        app:layout_constraintBottom_toBottomOf="@id/itemListTemperatureTV"/>
    <View
        android:id="@+id/itemBorder"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemListIcon"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>